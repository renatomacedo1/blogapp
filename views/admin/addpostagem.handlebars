{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Novo Post</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" id="" class="form-control" required></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>